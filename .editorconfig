# Stop the editor from looking for .editorconfig files in the parent directories
root = true

# Apply Unix-style newlines with every file ending in a newline
[*]
# Non-configurable Biome behaviors
charset = utf-8
insert_final_newline = true

# Same as configured for Biome:
end_of_line = lf
indent_style = space
indent_size = 2
max_line_length = 120
